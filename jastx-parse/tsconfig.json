{
  "include": ["./tests/**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "jastx",
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "jastx": ["../jastx"],
      "jastx/*": ["../jastx/dist/*"]
    },
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
